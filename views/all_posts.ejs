<div class="container-post " > 
  <div class="post_head">
    <h1>All users posts</h1>
    <p><a class="create" href="/new_post">New Post</a></p>
    
  </div>

 <div class="user-post" >
  <ul  >
    <%   if(locals.Posts && locals.date){%>
      <% Posts.forEach((post)=>{ %>
        <li>
        <h2><%=post.title %> </h2>
        <p><%= date %></p>
        <p><%= post.desc %></p>
        <p id="post-by">Posted by: <%= post.name %> </p>
        </li>

        <div class="action-btn "> 
          <a href="/about/<%= post.id %>" class="btn btn-primary">Read More</a>
          <a href="/edit/<%= post.id %>" class="btn btn-info">Edit Article</a>
          <a href="/delete/<%= post.id %>" class="btn btn-danger" >Delete</a>
        </div>
    
        <% }); %>
      <%  } %>
  </ul>
 </div>
  
</div>


